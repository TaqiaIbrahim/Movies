@model MovieFormViewModel
@{
    ViewData["Title"] = Model.Title;
    
}
<div class="row mt-60-px d-flex justify-content-between mb-3 ">
    <div class="col-md-3 d-flex justify-content-between mb-3">
<img src="data:image/*;base64,@(Convert.ToBase64String(Model.Poster))" class="img-thumbnail"alt="@Model.Title"
    </div>
    <div class="col-md-7 ">
        <div class="d-flex justify-content-between mb-3">
            <h3>@Model.Title</h3>
            <span class="mt-3">
                <i class="bi bi-star-fill text-warning"></i>
                <span class="text-muted"> @Model.Rate.ToString("0.0")</span>
            </span>
        </div>
            <span class="text-muted">
                <i class="bi bi-Calender-week">@Model.Year</i>
            </span>
       <span class="text-muted">
        <i class="bi bi-film text-warning"></i>
        </span>
        <p class="text-justify mt-3">@Model.StoreLine</p>
            
        
    </div>

</div>
